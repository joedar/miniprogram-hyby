/* pages/news/list/list.wxss */

.newsList {background: #fff; padding: 0 20rpx;}
.newsList > .news {padding: 20rpx 0; border-top: 1px #eee solid;}
.newsList > .news > .titles {display: -webkit-flex; display: flex; justify-content: space-between;}
.newsList > .news > .titles > view:nth-of-type(2) {padding-left: 20rpx;}
.newsList > .news > .titles image {width: 260rpx; height: 150rpx;}
.newsList > .news > .titles.big {justify-content: center; flex-flow: column;}
.newsList > .news > .titles.big > view:nth-of-type(2) {padding-left: 0; margin-top: 15rpx;}
.newsList > .news > .titles.big image {width: 100%; height: 340rpx;}

.newsList > .news > .titles .title > text {font-size: 110%;}

.newsList > .news > .date {margin-top: 10rpx;}
.newsList > .news > .date > text {font-size: 95%; opacity: .6;}

.noTextList {height: 400rpx; line-height: 400rpx; text-align: center; opacity: .7}
