button.btn {background: #fff; padding: 0; font-size: 100%; line-height: 100%; border-radius: 0;}
button.btn::after {display: none;}
button.btn.button-hover {background-color: #ffffff;}


.clearfix:before, .clearfix:after {content: ""; display: table;}
.clearfix:after {clear: both;}


.PUBLICONTAINER {padding: 20rpx;}
.PUBLICONTAINER > .CON {background: white; padding: 30rpx 20rpx; border-radius: 16rpx; margin-bottom: 20rpx;}
.PUBLICONTAINER > .CON {box-shadow: 0 5rpx 12rpx rgb(225, 225, 225);}




.SECTION > .HEAD,
.SECTION > .BODY {margin: 0 20rpx; position: relative;}
.SECTION > .HEAD {height: 80rpx;}
.SECTION > .HEAD > view {position: absolute; bottom: 10rpx;}
.SECTION > .HEAD > .title {font-size: 120%;}
.SECTION > .HEAD > .more {right: 0; font-size: 95%; opacity: .7;}

.discounts {display: -webkit-flex; display: flex; flex-flow: row wrap;}
.discounts > view {display: -webkit-flex; display: flex;}
.discounts > view::before {width: 30rpx; height: 30rpx; content: "";}
.discounts > view::after {font-size: 80%; padding-left: 4rpx; color: rgb(229,1,18);}
.discounts > .miaosha::before {background: url(https://hybyapi.wwwj.com.cn/MINIPROGRAM/images/icon/xianshimiaosha.png) no-repeat; background-size: 100% auto;}
.discounts > .miaosha::after {content: "限时秒杀";}
.discounts > .temai::before {background: url(https://hybyapi.wwwj.com.cn/MINIPROGRAM/images/icon/temai.png) no-repeat; background-size: 100% auto;}
.discounts > .temai::after {content: "特卖商品";}
.discounts > .dingzhi::before {background: url(https://hybyapi.wwwj.com.cn/MINIPROGRAM/images/icon/dingzhi.png) no-repeat; background-size: 100% auto;}
.discounts > .dingzhi::after {content: "窗帘定制";}

