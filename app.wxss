/* .ITEMLIST {background: red;} */
.ITEMLIST {display: -webkit-flex; display: flex; justify-content: space-between;}
.ITEMLIST > .row {width: 48.5%;}
.ITEMLIST > .row > .item {background: white; box-shadow: 0 0 20rpx #ccc; border-radius: 8rpx; overflow: hidden;}
.ITEMLIST > .row > .item {margin-top: 25rpx;}

/* mode="widthFix" 宽度100%，高度自适应 */
.ITEMLIST > .row > .item > image {width: 100%;}
.ITEMLIST > .row > .item > .txt {padding: 20rpx;}
.ITEMLIST > .row > .item > .txt > view {margin-top: 15rpx;}
.ITEMLIST > .row > .item > .txt > view:first-child {margin-top: 0;}
.ITEMLIST > .row > .item > .txt > .discounts > view {margin-top: 15rpx; margin-right: 15rpx;}
.ITEMLIST > .row > .item > .txt > .title {display: -webkit-box; display: box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden;}
.ITEMLIST > .row > .item > .txt > .title {font-size: 95%; line-height: 40rpx;}
.ITEMLIST > .row > .item > .txt > .prices {display: -webkit-flex; display: flex; justify-content: space-between; align-items: center}
.ITEMLIST > .row > .item > .txt > .prices .price {color: #e50012;}
.ITEMLIST > .row > .item > .txt > .prices .price text:first-child {font-size: 60%;}
.ITEMLIST > .row > .item > .txt > .prices .price text:last-child {font-size: 130%;}
.ITEMLIST > .row > .item > .txt > .prices .btn {height: 50rpx; line-height: 46rpx; border-radius: 25rpx; background: #e50012; color: white; padding: 0 15rpx;}
.ITEMLIST > .row > .item > .txt > .prices .btn text {font-size: 75%;}

.FORM {padding: 20rpx; background: #fff;}
.FORM .border {border:1px #ddd solid; border-radius: 8rpx;}
.FORM input {height: 80rpx; padding: 0 20rpx;}
.FORM textarea {width: 94%; padding: 2% 2.5%;}

.FORM .part {margin-bottom: 30rpx;}
.FORM .part .name {margin-bottom: 12rpx;}


