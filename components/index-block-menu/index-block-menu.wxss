/* components/index-block-menu/index-block-menu.wxss */

.block-menu {margin: 0 20rpx; padding: 10px 0;}
.block-menu > .menus {display: -webkit-flex; display: flex; flex-flow: row wrap; justify-content: center;}
.block-menu > .menus > .box {width: 46%; margin: 2%;}
.block-menu > .menus > .box {position: relative; padding-bottom: 40%; background: #fff; overflow: hidden;}
.block-menu > .menus > .box:nth-of-type(1) {background: rgba(178,34,34, .25);}
.block-menu > .menus > .box:nth-of-type(2) {background: rgba(184,134,11, .25);}
.block-menu > .menus > .box:nth-of-type(3) {background: rgba(138,43,226, .25);}
.block-menu > .menus > .box:nth-of-type(4) {background: rgba(114,210,209, .25);}

.block-menu .box:nth-of-type(1),
.block-menu .box:nth-of-type(4) {border-bottom-left-radius: 40%; border-top-right-radius: 40%; border-top-left-radius: 10rpx; border-bottom-right-radius: 10rpx;}
.block-menu .box:nth-of-type(2),
.block-menu .box:nth-of-type(3) {border-bottom-left-radius: 10rpx; border-top-right-radius: 10rpx; border-top-left-radius: 40%; border-bottom-right-radius: 40%;}


.block-menu .box > .con {position: absolute; width: 100%; left: 0; top: 50%; transform: translateY(-50%);}
.block-menu .box > .con {display: -webkit-box; display: flex; justify-content: center;}

.block-menu .ms {text-align: center;}
.block-menu .ms::before {display: table; margin: 0 auto; margin-bottom: 20rpx; content: "";}
.block-menu .ms::before {width: 70rpx; height: 70rpx;}
.block-menu .ms.item::before {background: url(https://hybyapi.wwwj.com.cn/MINIPROGRAM/images/icon/index-block-menu-item.png) center no-repeat; background-size: 100% auto;}
.block-menu .ms.news::before {background: url(https://hybyapi.wwwj.com.cn/MINIPROGRAM/images/icon/index-block-menu-news.png) center no-repeat; background-size: 100% auto;}
.block-menu .ms.diary::before {background: url(https://hybyapi.wwwj.com.cn/MINIPROGRAM/images/icon/index-block-menu-diary.png) center no-repeat; background-size: 100% auto;}
.block-menu .ms.cuxiao::before {background: url(https://hybyapi.wwwj.com.cn/MINIPROGRAM/images/icon/index-block-menu-cuxiao.png) center no-repeat; background-size: 100% auto;}



